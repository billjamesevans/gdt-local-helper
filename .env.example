# Application configuration
FLASK_APP=wsgi.py
FLASK_DEBUG=0
# Bind to localhost by default (do not change unless you fully understand the risks)
FLASK_RUN_HOST=127.0.0.1
FLASK_RUN_PORT=5000

# Database: default local sqlite; switch to Postgres by setting DATABASE_URL
# Example Postgres: postgresql+psycopg2://user:password@localhost:5432/gdt_helper
DATABASE_URL=sqlite:///gdt_helper.db

# Uploads (relative to project root). Keep under 25 MB per file.
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH_MB=25
